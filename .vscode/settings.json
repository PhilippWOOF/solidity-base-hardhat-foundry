{
    "extensions.ignoreRecommendations": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "files.autoSave": "onFocusChange",
    "editor.hover.enabled": true,
    "solidity.telemetry": false,
    "solidity.formatter": "prettier",
    "[solidity]": {
        "editor.defaultFormatter": "NomicFoundation.hardhat-solidity"
    },
    "cSpell.enabledFileTypes": {
        "json": false
    },
    "cSpell.ignorePaths": [
        "package-lock.json",
        "node_modules",
        "vscode-extension",
        ".git/{info,lfs,logs,refs,objects}/**",
        ".git/{index,*refs,*HEAD}",
        ".vscode",
        ".vscode-insiders",
        "pnpm-lock.yaml"
    ],
    "files.associations": {
        "*.env.details": "env"
    },
    "cSpell.words": [
        "Blockscout",
        "Chainlink",
        "commitlint",
        "compat",
        "depl",
        "docgen",
        "ethersproject",
        "fulltrace",
        "hardfork",
        "Holesky",
        "IERC",
        "Initializable",
        "IPFS",
        "keccak",
        "lintstagedrc",
        "Merkle",
        "mocharc",
        "nomicfoundation",
        "nomiclabs",
        "Pausable",
        "preinstall",
        "Reentrancy",
        "Sepolia",
        "solcover",
        "solhint",
        "solhintignore",
        "struct",
        "structs",
        "typechain",
        "typecheck"
    ]
}
